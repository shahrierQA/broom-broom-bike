extends baseEmail
block emailContent
    p Hi #{firstName},
        p Forgot your password? Please go to this link below: #{url}
        p (website for this action not yet implemented)
        table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
                tr
                    td(align='left')
                        table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                            tbody
                                tr
                                    td
                                        if currUser
                                            a(href='/', target='_blank') reset your password
                                            
                                        else
                                            a(href=`${url}`, target='_blank') reset your password
        p If you didn't request this, please ignore this message.
        